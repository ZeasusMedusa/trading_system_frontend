# Environment для запуска только фронтенда
# Бэкенд должен быть уже запущен на том же сервере

# ===== Frontend =====
FRONTEND_PORT=3000

# ===== Backend URL =====
# Вариант 1: Бэкенд на localhost хоста (рекомендуется)
NEXT_PUBLIC_API_URL=http://host.docker.internal:8000

# Вариант 2: Бэкенд на другом порту
# NEXT_PUBLIC_API_URL=http://host.docker.internal:8001

# Вариант 3: Для production с доменом
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Вариант 4: Если бэкенд в Docker network с известным именем контейнера
# NEXT_PUBLIC_API_URL=http://smiio_backend:8000

# ===== Supabase (optional) =====
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

